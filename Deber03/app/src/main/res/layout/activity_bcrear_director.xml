<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_crear_director"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BCrearDirector">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Director"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_nombre"
        android:layout_width="239dp"
        android:layout_height="55dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="Nombre del director"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.574"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/input_peliculasDirigidas"
        android:layout_width="240dp"
        android:layout_height="58dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Peliculas dirigidas"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/inputFechaNac"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/inputFechaNac"
        app:layout_constraintTop_toBottomOf="@+id/inputFechaNac" />

    <EditText
        android:id="@+id/input_puntuacion"
        android:layout_width="240dp"
        android:layout_height="51dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="PuntuaciÃ³n IMDB"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/input_peliculasDirigidas"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_peliculasDirigidas"
        app:layout_constraintTop_toBottomOf="@+id/input_peliculasDirigidas" />

    <Switch
        android:id="@+id/input_rodaje"
        android:layout_width="177dp"
        android:layout_height="48dp"
        android:layout_marginTop="32dp"
        android:text="En rodaje"
        app:layout_constraintEnd_toEndOf="@+id/input_puntuacion"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/input_puntuacion"
        app:layout_constraintTop_toBottomOf="@+id/input_puntuacion" />

    <EditText
        android:id="@+id/inputFechaNac"
        android:layout_width="238dp"
        android:layout_height="53dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Fecha de nacimiento"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/input_nombre"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_nombre"
        app:layout_constraintTop_toBottomOf="@+id/input_nombre" />


    <Button
        android:id="@+id/btn_crear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Crear"
        app:layout_constraintEnd_toEndOf="@+id/input_rodaje"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/input_rodaje"
        app:layout_constraintTop_toBottomOf="@+id/input_rodaje" />

</androidx.constraintlayout.widget.ConstraintLayout>